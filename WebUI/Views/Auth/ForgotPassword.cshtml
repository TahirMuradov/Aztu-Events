@{
    Layout = "_AuthLayout";
}
<div class="card-body p-0">
    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="col-12">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-2">Şifrəni unutmusunuz ?</h1>
                    <p class="mb-4">
                        Elektron Poçtunuzu daxil edin.Sizə Təsdiqləmə linki göndərək.
                    </p>
                </div>
                <form class="user" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="email" name="Email" class="form-control form-control-user"
                               id="exampleInputEmail" aria-describedby="emailHelp"
                               placeholder="Elektron Poçtunuzu daxil edin!...">
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        Göndər
                    </button>
                </form>
                <hr>
                <div class="text-center">
                    <a class="small" asp-area="dashboard" asp-controller="Auth" asp-action="Register"> Yeni Profil Yarat!</a>
                </div>
                <div class="text-center">
                    <a class="small" asp-area="dashboard" asp-controller="Auth" asp-action="Login">Profiliniz var?O zaman daxil ol!</a>
                </div>
            </div>
        </div>
    </div>
</div>

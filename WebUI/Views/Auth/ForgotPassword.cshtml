@{
    Layout = "_AuthLayout";
}
<div class="card-body p-0">
    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="col-12">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-2">@_localization.GetKey("ForgotPassword6")</h1>
                    <p class="mb-4">
                        @_localization.GetKey("ForgotPassword1")
                    </p>
                </div>
                <form class="user" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="email" name="Email" class="form-control form-control-user"
                               id="exampleInputEmail" aria-describedby="emailHelp"
                               placeholder="@_localization.GetKey("ForgotPassword2")">
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">
                        @_localization.GetKey("ForgotPassword3")
                    </button>
                </form>
                <hr>
                <div class="text-center">
                    <a class="small" asp-area="dashboard" asp-controller="Auth" asp-action="Register">@_localization.GetKey("ForgotPassword4")</a>
                </div>
                <div class="text-center">
                    <a class="small" asp-area="dashboard" asp-controller="Auth" asp-action="Login">@_localization.GetKey("ForgotPassword5")</a>
                </div>
            </div>
        </div>
    </div>
</div>

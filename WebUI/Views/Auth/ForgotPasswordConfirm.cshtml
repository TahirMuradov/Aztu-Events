
@model UserResetPasswordDTO
@{
    Layout = "_AuthLayout";
}

<form method="post">
    <input type="hidden" value="@Model.UserId" asp-for="UserId" />
    <input type="hidden" value="@Model.Token" asp-for="Token" />
    <div class="container">

        <div class="form-group">
            <label>@_localization.GetKey("ForgotPasswordConfirm1")</label>
            <input type="password" value="" asp-for="NewPassword" class="form-control" placeholder="@_localization.GetKey("ForgotPasswordConfirm2")" />
            <span class="text-danger" asp-validation-for="NewPassword"></span>
        </div>
        <div class="form-group">
            <label>@_localization.GetKey("ForgotPasswordConfirm3")</label>
            <input type="password" class="form-control" value="" asp-for="NewPasswordConfirm" placeholder="@_localization.GetKey("ForgotPasswordConfirm3")" />
            <span class="text-danger" asp-validation-for="NewPasswordConfirm"></span>
        </div>

        <button type="submit" class="btn btn-outline-success">@_localization.GetKey("ForgotPasswordConfirm4")</button>
    </div>

</form>

                        @for (int i = 0; i < a.Date.Count && i < a.StartedTime.Count && i < a.EndTime.Count; i++)
                        {
                            <li>
                                @Html.Raw(new DateTime(a.Date[i], a.StartedTime[i]).ToString("yyyy-MM-dd HH:mm")+"-"+ new DateTime(a.Date[i], a.EndTime[i]).ToString("yyyy-MM-dd HH:mm"))

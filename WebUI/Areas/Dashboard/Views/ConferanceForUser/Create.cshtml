    </div>
    <div class="form-group">
        <label for="StartTime">@_localization.GetKey("DashboardConfranceForUserCreate12"):</label>
        <input type="text" id="StartTime" name="StartedDate" asp-for="StartedDate" class="form-control" />
    </div>
    <div class="form-group">

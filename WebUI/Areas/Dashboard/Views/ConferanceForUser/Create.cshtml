                          <input type='text' class='form-control' id=specialGuestsName  name='specialGuestsName' placeholder='@_localization.GetKey("DashboardConfranceDetail3")' value='' />
          </div>
              <div class='col-5'>
                          <label  for='specialGuestsEmail'>@_localization.GetKey("DashboardConfranceDetail4")</label>
                          <input type='email' class='form-control' id=specialGuestsEmail name='specialGuestsEmail' placeholder='@_localization.GetKey("DashboardConfranceDetail4")'  />

              </div>
              <div class='col-2'>

            
              </div>
          </div>`;
        }

        function removeSpecialGuest() {
            var rowToRemove = document.querySelectorAll(".added")

            rowToRemove[rowToRemove.length-1].remove();
        
        }

        function PhotoDelete(photoName) {
            console.log(photoName)
            let fileInput = document.getElementById("photo");
            var updatedFiles = fileInput.files;

            var newFileList = new DataTransfer();

            for (var j = 0; j < updatedFiles.length; j++) {
                if (updatedFiles[j].name !== photoName) {
                    newFileList.items.add(updatedFiles[j]);
                }
            }

            fileInput.files = newFileList.files;
            var img_box = document.getElementById(photoName);
            debugger;
            img_box.remove();


        }
        $("#photo").change(function () {
            $(`#form-file .d-flex`).remove();

            $.each(this.files, function (index, file) {

                $("#form-file").append(`



                           <div class="d-flex flex-wrap text-center" id="${file.name}">


                                     <img  src="${URL.createObjectURL(file)}" for="photo" id="photo" name="Photo" style="width: 200px;" alt="" />

                            <button type="button" onclick="PhotoDelete('${file.name}')" class="btn btn-outline-danger "><i class="fas fa-trash"></i></button>



                    </div>

                     `);
            });
        });

            
            
            </script>
    <script>
        document.getElementById("EndDate").addEventListener("change", function () {
            var input = this.value;
            var regex = /^(?:2[0-3]|[01][0-9]):[0-5][0-9]$/;
            if (!regex.test(input)) {
                alert("@_localization.GetKey("DashboardConfranceForUserCreate15")");
                this.value = "";
            }
        });
        document.getElementById("StartTime").addEventListener("change", function () {

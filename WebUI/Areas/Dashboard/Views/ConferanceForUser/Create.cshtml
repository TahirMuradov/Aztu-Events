        <input type="text" id="EndDate" name="EndDate" asp-for="EndDate" class="form-control" />
    </div>
   
    <div class="form-group" id="form-file">
        <label for="Photo">@_localization.GetKey("DashboardConfranceForUserCreate14")</label>
        <input type="file"  accept="image/*" value="" id="photo" name="Photo" class="form-control-file" />






    </div>
    
    <button class="btn btn-outline-success" type="submit">@_localization.GetKey("DashboardAuditoriumCreate4")</button>
</form>
@section scripts{
    <script>
        function GetAuditoriumTime() {
            var selectElement = document.querySelector(".mySelect");
            var selectedOption = selectElement.options[selectElement.selectedIndex];
            var x = selectedOption.value;

            $.ajax({
                url: `/dashboard/ConferanceForUser/GetConfranceTime?AuditoriumId=${x}`,
                type: "Get",

                success: function (e) {
                    var jsonObj = JSON.parse(e);
                    console.log(e);
                    console.log(jsonObj);
                    debugger
                    var time_info_div = document.querySelector('.time_info');
                    time_info_div.innerHTML = '';

                    var timeList = "";

                    if (jsonObj.Date && jsonObj.StartedTime && jsonObj.EndTime) {
                        jsonObj.Date.forEach(function (date, index) {

                            var startDate = new Date(date + 'T' + jsonObj.StartedTime[index]);
                            var endDate = new Date(date + 'T' + jsonObj.EndTime[index]);

                            var formattedStartDate = formatDateTime(startDate);
                            var formattedEndDate = formatDateTime(endDate);

                            var result = formattedStartDate + "-" + formattedEndDate;

                            timeList += `<li>${result}</li>`;
                        });
                    }

                    var TextContent = `
                <div class="alert alert-info">
                            <strong>Məlumat!</strong> ${jsonObj.AudutoriyaNumber} nömrəli auditoriya dolu vaxtları:
                    <ul>${timeList}</ul>
                </div>
            `;

                    time_info_div.innerHTML = TextContent;
                },
                error: function (e) {
                    console.log(e);
                }
            });

     
        }
        function formatDateTime(dateTime) {
            return dateTime.toLocaleString('az-AZ', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' });
        }
    </script>
    <script>
        function addSpecialGuest() {

            var specialGuestsContainer = document.querySelector('.specialGuest');
          
            specialGuestsContainer.innerHTML+=`  <div class='row added'>

          <div class='col-5'>

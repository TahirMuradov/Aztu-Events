@model List<ConferenceGetAdminListDTO>




<table id="example" class="display table table-striped" style="width:100%">
    <thead>
        <tr>

            <th>№</th>
            <th>Konfrans Adı</th>
            <th>Konfransın Başlama-Bitmə Tarixi</th>
            <th>Sifarişçi Email</th>
            <th>Sifarişçi Adı Soyadı</th>
            <th>Auditoriya</th>
            <th>Kateqoriya Adı</th>
            <th>Şəkli</th>
            <th>Statusu</th>
            <th>Dıgər</th>




        </tr>

    </thead>
    <tbody id="parent">
        @{
            int counter = 0;
        }
        @foreach (var confrance in Model)
        {

            counter++;
            <tr>

                <td>@counter</td>
                <td>@confrance.ConferenceName</td>
                <td>   @Html.Raw(new DateTime(confrance.Day, confrance.StartedDate).ToString("yyyy-MM-dd HH:mm") + "-" + new DateTime(confrance.Day, confrance.EndDate).ToString("yyyy-MM-dd HH:mm"))</td>
                <td>@confrance.UserEmail</td>
                <td>@confrance.UserFullname</td>
                <td>@confrance.AudutoriumName</td>
                <td>@confrance.CategoryName</td>
                <td> <img src="@confrance.ImgUrl" width="100px" height="100px"/> </td>
                <td>@confrance.Status</td>
                <td>

                    <a class="btn btn-outline-danger" href="/dashboard/Conferance/changestatus/@confrance.Id">Statusunu Dəyiş</a>
                    <button class="btn btn-outline-danger" onclick="confranceDelet('@confrance.Id')">Sil</button>
                    <a class="btn btn-outline-warning" href="/dashboard/Conferance/Detail/@confrance.Id">Ətraflı Oxu</a>



                </td>
            </tr>

        }
    </tbody>

    <tfoot>
        <tr>

            <th>№</th>
            <th>Konfrans Adı</th>
            <th>Konfransın Başlama-Bitmə Tarixi</th>
            <th>Sifarişçi Email</th>
            <th>Sifarişçi Adı Soyadı</th>
            <th>Auditoriya</th>
            <th>Kateqoriya Adı</th>
            <th>Şəkli</th>
            <th>Statusu</th>
            <th>Dıgər</th>



        </tr>

    </tfoot>
</table>

<script>
    let table = new DataTable('#example', {
        responsive: true
    });
   
    function confranceDelet(id) {
        swal({
            title: "Silmək İstədiynizə əminsiniz?",

            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                debugger
                if (willDelete) {
                    $.ajax({
                        url: `/Dashboard/Conferance/Delete/${id}`,
                        method: "DELETE",
                        success: function (response) {
                            swal("Silindi!", {
                                icon: "success",
                            }).then((e) => {

                                if (e) {
                                    window.location.reload();

                                }
                            })
                        },
                        error: function () {
                            swal("Proses Düzgun getmedi", "error");
                        }
                    })

                }
            });
    }
</script>
@model CategoryUpdateDTO
<form method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for=CategoryId/>
    <div class="form-group">

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item active" role="presentation">
                <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="false">AZ</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">RU</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">US</button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="Content" name="Content" value="@Model.Content[0]" placeholder="@_localization.GetKey("DashboardCategoryCreate0")" />
                    <input type="hidden" asp-for="LangCode" value="az" name="LangCode" />
                </div>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="Content" name="Content" value="@Model.Content[1]" placeholder="@_localization.GetKey("DashboardCategoryCreate1")" />
                    <input type="hidden" asp-for="LangCode" value="ru" name="LangCode" />

                </div>
            </div>
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                <div class="form-group">
                    <input type="text" class="form-control" asp-for="Content" name="Content" value="@Model.Content[2]" placeholder="@_localization.GetKey("DashboardCategoryCreate2")" />
                    <input type="hidden" asp-for="LangCode" value="en" name="LangCode" />

                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-outline-success">@_localization.GetKey("DashboardAuditoriumEdit0")</button>
</form>
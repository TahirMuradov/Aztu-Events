

@model UserAddRoleDTO

<form method="post">
    <div class="form-group">
        <input type="hidden" asp-for=UserId value="@Model.UserId" />
        <select class="form-control" name="RoleId">
            @foreach (var roles in ViewBag.Roles as List<GetRolesDTO>)
            {
                <option value="@roles.id">@roles.RoleName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-outline-success">@_localization.GetKey("DashboardUserAddRole0")</button>
</form>